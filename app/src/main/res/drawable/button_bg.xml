<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Gradient untuk border -->
    <gradient
        android:angle="135"
        android:startColor="#5105FB"
    android:centerColor="#3B03BC"
    android:endColor="#3700B3"
    android:type="linear"
    android:useLevel="false" />

    <!-- Mengatur sudut border -->
    <corners android:radius="20dp"/>

    <!-- Opsional: Memberikan padding untuk konten di dalamnya -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>

    <!-- Opsional: Memberikan stroke jika ingin border yang lebih jelas -->
    <stroke
        android:width="2dp"
        android:color="#3B03BC" />

</shape>
